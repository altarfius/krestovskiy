{
    "name": "yiisoft/yii2-app-basic",
    "description": "Yii 2 Basic Project Template",
    "keywords": ["yii2", "framework", "basic", "project template"],
    "homepage": "http://www.yiiframework.com/",
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/yii2/issues?state=open",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/yii2"
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.0",
        "yiisoft/yii2": "~2.0.14",
        "yiisoft/yii2-bootstrap": "~2.0.0",
        "yiisoft/yii2-swiftmailer": "~2.0.0",
        "kartik-v/yii2-builder": "v1.6.6",
        "yiisoft/yii2-bootstrap4": "1.0.x-dev",
        "kartik-v/yii2-widget-switchinput": "v1.3.1",
        "kartik-v/yii2-widget-select2": "^2.1",
        "kartik-v/yii2-grid": "^3.2",
        "kartik-v/yii2-dialog": "^1.0",
        "kartik-v/yii2-widget-growl": "^1.1",
        "kartik-v/yii2-dropdown-x": "^1.2",
        "kartik-v/yii2-icons": "^1.4",
        "kartik-v/yii2-bootstrap4-dropdown": "^1.0",
        "kartik-v/yii2-nav-x": "^1.2",
        "kartik-v/yii2-widget-fileinput": "^1.0",
        "kartik-v/yii2-widget-datepicker": "^1.4",
        "kartik-v/yii2-field-range": "1.3.0.x-dev",
        "kartik-v/dependent-dropdown": "1.4.x-dev",
        "kartik-v/yii2-widget-depdrop": "^1.0",
        "kartik-v/yii2-widget-datetimepicker": "dev-master",
        "kartik-v/yii2-widget-typeahead": "1.0.x-dev",
        "kartik-v/yii2-widget-touchspin": "v1.2.3",
        "kartik-v/yii2-editable": "1.7.x-dev"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "~2.0.0",
        "yiisoft/yii2-gii": "~2.0.0",
        "yiisoft/yii2-faker": "~2.0.0",

        "codeception/base": "^2.2.3",
        "codeception/verify": "~0.3.1",
        "codeception/specify": "~0.4.3"
    },
    "config": {
        "process-timeout": 1800,
        "fxp-asset": {
            "enabled": false
        }
    },
    "scripts": {
        "post-install-cmd": [
            "yii\\composer\\Installer::postInstall"
        ],
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject",
            "yii\\composer\\Installer::postInstall"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ]
        },
        "yii\\composer\\Installer::postInstall": {
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
